{
  "name": "cumpol",
  "packageManager": "yarn@3.1.1",
  "workspaces": [
    "client",
    "server"
  ],
  "scripts": {
    "server": "cd server && yarn dev",
    "client": "cd client && yarn start",
    "start": "concurrently -n 'server,client' -c 'red,green' \"yarn server\" \"yarn client\""
  },
  "dependencies": {
    "concurrently": "^6.5.1"
  },
  "engines": {
    "node": "17.x"
  }
}
